<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.programmercalculator.ProgrammerCalculatorFragment">


    <EditText
        android:id="@+id/editText_scientific_expression"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView_scientific_answer"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_scientific_answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/keypad"
        android:gravity="bottom|right"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <!--Natural Log Button-->
            <Button
                android:id="@+id/btn_lg"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:text="lg"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Binary Button-->
            <Button
                android:id="@+id/btn_0b"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:text="0b"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Hex Button-->
            <Button
                android:id="@+id/btn_0x"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:hint="@string/log"
                android:text="0x"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Octal Button-->
            <Button
                android:id="@+id/btn_0a"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:text="0o"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <!--Delete Button-->
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Move Left Button-->
            <Button
                android:id="@+id/btn_move_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="@string/button_move_cursor_left"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Move Right Button-->
            <Button
                android:id="@+id/btn_move_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="@string/button_move_cursor_right"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Move Left Button-->
            <Button
                android:id="@+id/btn_left_shift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="&lt;&lt;"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Shift Right Button-->
            <Button
                android:id="@+id/btn_right_shift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="&gt;&gt;"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <!--A Button-->
            <Button
                android:id="@+id/btn_A"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--B Button-->
            <Button
                android:id="@+id/btn_B"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:text="B"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--C Button-->
            <Button
                android:id="@+id/btn_C"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:hint="@string/log"
                android:text="C"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--D Button-->
            <Button
                android:id="@+id/btn_D"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:hint="ln"
                android:text="D"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--E Button-->
            <Button
                android:id="@+id/btn_E"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:hint="@string/sin"
                android:text="E"

                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--F Button-->
            <Button
                android:id="@+id/btn_F"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:hint="sin_inv"
                android:text="F"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Left Parenthesis Button-->
            <Button
                android:id="@+id/btn_left_parenthesis"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:hint="@string/cos"
                android:text="("
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Right Parenthesis Button-->
            <Button
                android:id="@+id/btn_right_parenthesis"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/horizontal_btn_color"
                android:hint="cos_inv"
                android:text=")"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <!--7 Button-->
            <Button
                android:id="@+id/btn_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/seven"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--8 Button-->
            <Button
                android:id="@+id/btn_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/eight"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--9 Button-->
            <Button
                android:id="@+id/btn_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/nine"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--AND Button-->
            <Button
                android:id="@+id/btn_AND"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="&amp;"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <!--4 Button-->
            <Button
                android:id="@+id/btn_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/four"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--5 Button-->
            <Button
                android:id="@+id/btn_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/five"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--6 Button-->
            <Button
                android:id="@+id/btn_six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/six"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--OR Button-->
            <Button
                android:id="@+id/btn_OR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="|"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <!--1 Button-->
            <Button
                android:id="@+id/btn_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/one"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--2 Button-->
            <Button
                android:id="@+id/btn_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/two"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--3 Button-->
            <Button
                android:id="@+id/btn_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/three"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--XOR Button-->
            <Button
                android:id="@+id/btn_XOR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/function_color"
                android:text="âŠ•"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:orientation="horizontal">

            <!--Dot Button-->
            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/dot"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--0 Button-->
            <Button
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Clear Button-->
            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/number_color"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

            <!--Unused Button-->
            <Button
                android:id="@+id/btn_unused"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:background="@color/equal_color"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>